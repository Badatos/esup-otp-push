<?xml version='1.0' encoding='utf-8'?>
<widget id="org.esupportail.esup_otp_push" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Esup OTP Push</name>
    <description>
        Push application for login
    </description>
    <author email="abouskine@gmail.com" href="http://bouskine.eu">
        Alex Bouskine
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <preference name="SplashScreenDelay" value="5000" />
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="FadeSplashScreenDuration" value="500"/>
    <preference name="SplashMaintainAspectRatio" value="false" />
    <preference name="SplashShowOnlyFirstTime" value="true" />

    <platform name="android">
        <allow-intent href="market:*" />

        <splash src="res/screen/splash-land.png" density="land-hdpi"/>
        <splash src="res/screen/splash-land.png" density="land-ldpi"/>
        <splash src="res/screen/splash-land.png" density="land-mdpi"/>
        <splash src="res/screen/splash-land.png" density="land-xhdpi"/>

        <splash src="res/screen/splash.png" density="port-hdpi"/>
        <splash src="res/screen/splash.png" density="port-ldpi"/>
        <splash src="res/screen/splash.png" density="port-mdpi"/>
        <splash src="res/screen/splash.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />ss
    </platform>
    <engine name="android" spec="~5.1.1" />
    <engine name="browser" spec="~4.1.0" />
    <icon src="res/icon.png" />
</widget>
